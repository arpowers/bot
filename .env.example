# Bot Configuration
# -----------------
# Copy to .env and fill in values

# Gateway
GATEWAY_TOKEN=           # openssl rand -hex 32
WEBHOOK_TOKEN=           # openssl rand -hex 32

# Paths (defaults work for local, override for cloud)
# BOT_WORKSPACE=~/dev/bot/workspace
# BOT_SKILLS=~/dev/bot/skills

# AI Models
# ---------
ANTHROPIC_API_KEY=       # Required - console.anthropic.com
OPENAI_API_KEY=          # Optional - for whisper, image gen
OPENROUTER_API_KEY=      # Optional - model fallbacks

# Channels
# --------
TELEGRAM_BOT_TOKEN=      # Required - @BotFather
DISCORD_TOKEN=           # Optional
DISCORD_CLIENT_ID=       # Optional

# Google Services
# ---------------
GOOGLE_OAUTH_CLIENT_ID=      # console.cloud.google.com
GOOGLE_OAUTH_CLIENT_SECRET=
GMAIL_APP_PASSWORD=          # Google Account → Security → App passwords

# Research & Enrichment
# ---------------------
PERPLEXITY_API_KEY=      # perplexity.ai
APOLLO_API_KEY=          # apollo.io
APIFY_API_TOKEN=         # apify.com
ENRICHLAYER_API_KEY=     # enrichlayer.com

# DataForSEO
DATAFORSEO_USERNAME=
DATAFORSEO_PASSWORD=

# Other Services
# --------------
ELEVENLABS_API_KEY=      # TTS
RESEND_API_KEY=          # Email sending
VOYAGE_API_KEY=          # Embeddings

# Infrastructure
# --------------
FLY_API_TOKEN=           # fly.io deploy
TAILSCALE_AUTH_KEY=      # Optional - remote access
